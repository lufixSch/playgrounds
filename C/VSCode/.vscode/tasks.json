{
  "tasks": [
    {
      "type": "shell",
      "label": "Compile single C/C++ file",
      "command": "/usr/bin/gcc",
      "args": [
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/build/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "shell",
      "label": "Compile C/C++ with Makefile",
      "command": "make",
      "args": ["build"]
    }
  ],
  "version": "2.0.0"
}
